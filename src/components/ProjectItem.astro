  apk: `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>`,
};

const projectId = title.toLowerCase().replace(/\s+/g, "-");
---

<article class="project-item reveal-on-scroll">
  <div class="project-content">
    <!-- Image Carousel -->
    <div
      class={`project-carousel ${isMobileScreenshots ? "mobile-screenshots" : ""}`}
      data-carousel={projectId}
    >
      <div class="carousel-container">
        <div class="carousel-track">
          {
            images.map((image, index) => (
              <div class="carousel-slide" data-index={index}>
                <img
                  src={image}
                  alt={`${title} screenshot ${index + 1}`}
                  loading="lazy"
                />
              </div>
            ))
          }
        </div>
      </div>
      {
        images.length > 1 && (
          <>
            <button class="carousel-btn prev" aria-label="Previous image">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <polyline points="15 18 9 12 15 6" />
              </svg>
            </button>
            <button class="carousel-btn next" aria-label="Next image">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <polyline points="9 18 15 12 9 6" />
              </svg>
            </button>
            <div class="carousel-dots">
              {images.map((_, index) => (
                <button
                  class={`dot ${index === 0 ? "active" : ""}`}
                  data-index={index}
                  aria-label={`Go to slide ${index + 1}`}
                />
              ))}
            </div>
          </>
        )
      }
    </div>

    <!-- Project Meta -->
    <div class="project-meta">
      <div class="project-year">{year}</div>
      <div>{category}</div>
      {logo && <img src={logo} alt={`${title} logo`} class="project-logo" />}
    </div>

    <!-- Project Info -->
    <div class="project-info">
      <h3 class="project-title">
        {title}
        {featured && <span class="featured-badge">Featured</span>}
      </h3>
      <p class="project-description">{description}</p>

      <!-- Tags with Icons -->
      <div class="project-tags">
        {
          tags.map((tag) => (
            <span class="tag">
              {techIcons[tag] && (
                <img src={techIcons[tag]} alt={tag} class="tag-icon" />
              )}
              {tag}
            </span>
          ))
        }
      </div>
    </div>

    <!-- Project Links -->
    <div class="project-links">
      {
        links.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class={`project-link-btn ${link.type}`}
          >
            <Fragment set:html={linkIcons[link.type] || ""} />
            {link.label}
          </a>
        ))
      }
    </div>
  </div>
</article>

<style>
  .project-item {
    border-top: 1px solid var(--border-subtle);
    padding: 4rem 0;
    transition: all 0.4s ease;
    position: relative;
  }

  .project-item::before,
  .project-item::after {
    content: "";
    position: absolute;
    left: 50%;
    width: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--accent-neon),
      var(--accent-neon-dim)
    );
    transition: width 0.4s ease;
    box-shadow: var(--glow-neon);
    transform: translateX(-50%);
  }

  .project-item::before {
    top: 0;
  }

  .project-item::after {
    bottom: 0;
  }

  .project-item:hover {
    background-color: #0a0a0a;
  }

  .project-item:hover::before,
  .project-item:hover::after {
    width: 50%;
  }

  .project-item:hover .project-title {
    color: var(--accent-neon);
    text-shadow: var(--glow-neon);
  }

  .project-content {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 24px;
    align-items: start;
  }

  /* Carousel Styles */
  .project-carousel {
    grid-column: 1 / 5;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--border-subtle);
    transition: all 0.4s ease;
  }

  .project-carousel.mobile-screenshots {
    max-width: 200px;
    margin: 0 auto;
  }

  .project-carousel.mobile-screenshots .carousel-slide img {
    object-fit: contain;
    background: #111;
  }

  .project-item:hover .project-carousel {
    border-color: var(--accent-neon);
    box-shadow: var(--glow-neon);
  }

  .carousel-container {
    overflow: hidden;
    aspect-ratio: 16/10;
  }

  .mobile-screenshots .carousel-container {
    aspect-ratio: 9/16;
  }

  .carousel-track {
    display: flex;
    transition: transform 0.4s ease;
    height: 100%;
  }

  .carousel-slide {
    min-width: 100%;
    height: 100%;
  }

  .carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .project-item:hover .carousel-slide img {
    transform: scale(1.02);
  }

  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.7);
    border: 1px solid var(--border-subtle);
    color: var(--text-main);
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .project-carousel:hover .carousel-btn {
    opacity: 1;
  }

  .carousel-btn:hover {
    background: var(--accent-neon);
    color: var(--bg-color);
    border-color: var(--accent-neon);
  }

  .carousel-btn.prev {
    left: 8px;
  }

  .carousel-btn.next {
    right: 8px;
  }

  .carousel-dots {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .dot.active,
  .dot:hover {
    background: var(--accent-neon);
    box-shadow: 0 0 8px var(--accent-neon);
  }

  /* Project Meta */
  .project-meta {
    grid-column: 5 / 7;
  }

  .project-year {
    color: var(--accent-neon);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .project-logo {
    width: 48px;
    height: 48px;
    margin-top: 1rem;
    border-radius: 8px;
  }

  /* Project Info */
  .project-info {
    grid-column: 7 / 11;
  }

  .project-title {
    transition: all 0.3s ease;
  }

  .project-description {
    color: #666;
    margin-top: 0.5rem;
    line-height: 1.6;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.75rem;
    padding: 4px 12px;
    border: 1px solid var(--border-subtle);
    border-radius: 100px;
    color: var(--text-muted);
    transition: all 0.3s ease;
  }

  .tag-icon {
    width: 14px;
    height: 14px;
  }

  .project-item:hover .tag {
    border-color: rgba(0, 255, 136, 0.3);
  }

  .featured-badge {
    display: inline-block;
    background: linear-gradient(
      135deg,
      var(--accent-neon),
      var(--accent-neon-dim)
    );
    color: var(--bg-color);
    font-size: 0.65rem;
    font-weight: 600;
    padding: 3px 8px;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-left: 0.5rem;
    box-shadow: var(--glow-neon);
  }

  /* Project Links */
  .project-links {
    grid-column: 11 / 13;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    opacity: 0;
    transform: translateX(-20px);
    transition: all 0.4s ease;
  }

  .project-item:hover .project-links {
    opacity: 1;
    transform: translateX(0);
  }

  .project-link-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 0.85rem;
    transition: all 0.3s ease;
    text-align: center;
    justify-content: center;
    white-space: nowrap;
  }

  .project-link-btn.demo {
    background: var(--accent-neon);
    color: var(--bg-color);
    border: 1px solid var(--accent-neon);
  }

  .project-link-btn.demo:hover {
    background: transparent;
    color: var(--accent-neon);
    box-shadow: var(--glow-neon);
  }

  .project-link-btn.repo {
    border: 1px solid var(--border-subtle);
    color: var(--text-main);
  }

  .project-link-btn.repo:hover {
    border-color: var(--accent-neon);
    color: var(--accent-neon);
  }

  .project-link-btn.apk {
    border: 1px solid var(--accent-neon);
    color: var(--accent-neon);
    background: rgba(0, 255, 136, 0.1);
  }

  .project-link-btn.apk:hover {
    background: var(--accent-neon);
    color: var(--bg-color);
    box-shadow: var(--glow-neon);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .project-content {
      grid-template-columns: 1fr 1fr;
    }

    .project-carousel {
      grid-column: 1 / 2;
    }

    .project-carousel.mobile-screenshots {
      max-width: 150px;
    }

    .project-meta {
      grid-column: 2 / 3;
    }

    .project-info {
      grid-column: 1 / 3;
    }

    .project-links {
      grid-column: 1 / 3;
      flex-direction: row;
      flex-wrap: wrap;
      opacity: 1;
      transform: none;
    }
  }

  @media (max-width: 768px) {
    .project-content {
      display: block;
    }

    .project-carousel {
      margin-bottom: 1.5rem;
    }

    .project-carousel.mobile-screenshots {
      max-width: 180px;
    }

    .project-meta {
      margin-bottom: 1rem;
    }

    .project-info {
      margin-bottom: 1.5rem;
    }

    .project-links {
      opacity: 1;
      transform: none;
    }

    .carousel-btn {
      opacity: 1;
    }
  }
</style>

<script>
  // Carousel functionality
  document.addEventListener("DOMContentLoaded", () => {
    const carousels = document.querySelectorAll("[data-carousel]");

    carousels.forEach((carousel) => {
      const track = carousel.querySelector(".carousel-track") as HTMLElement;
      const slides = carousel.querySelectorAll(".carousel-slide");
      const dots = carousel.querySelectorAll(".dot");
      const prevBtn = carousel.querySelector(".prev");
      const nextBtn = carousel.querySelector(".next");

      if (slides.length <= 1) return;

      let currentIndex = 0;

      const updateCarousel = (index: number) => {
        currentIndex = index;
        if (track) {
          track.style.transform = `translateX(-${index * 100}%)`;
        }
        dots.forEach((dot, i) => {
          dot.classList.toggle("active", i === index);
        });
      };

      prevBtn?.addEventListener("click", () => {
        const newIndex =
          currentIndex === 0 ? slides.length - 1 : currentIndex - 1;
        updateCarousel(newIndex);
      });

      nextBtn?.addEventListener("click", () => {
        const newIndex =
          currentIndex === slides.length - 1 ? 0 : currentIndex + 1;
        updateCarousel(newIndex);
      });

      dots.forEach((dot, index) => {
        dot.addEventListener("click", () => updateCarousel(index));
      });
    });
  });
</script>
