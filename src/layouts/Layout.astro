<style is:global>
  /* --- CSS VARIABLES & RESET --- */
  :root {
    --bg-color: #050505;
    --text-main: #eaeaea;
    --text-muted: #888888;
    --accent: #ffffff;
    --accent-neon: #00ff88;
    --accent-neon-dim: #00cc6a;
    --border-subtle: #1f1f1f;
    --glow-neon: 0 0 20px rgba(0, 255, 136, 0.3);

    --font-heading: "Manrope", sans-serif;
    --font-body: "Inter", sans-serif;

    --spacing-container: 8vw;
    --transition-smooth: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  * {
    margin: 0;
    padding: 0px;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    font-size: 16px;
  }

  body {
    background-color: var(--bg-color);
    color: var(--text-main);
    font-family: var(--font-body);
    line-height: 1.6;
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
  }

  a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition-smooth);
  }

  ul {
    list-style: none;
  }

  /* --- UTILITIES --- */
  .container {
    padding: 0 var(--spacing-container);
    max-width: 1600px;
    margin: 0 auto;
  }

  .section-padding {
    padding: 24px var(--spacing-container);
  }

  .grid-12 {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 24px;
  }

  /* --- TYPOGRAPHY --- */
  h1,
  h2,
  h3,
  h4 {
    font-family: var(--font-heading);
    font-weight: 800;
    letter-spacing: -0.02em;
    color: var(--accent);
  }

  .text-huge {
    font-size: clamp(3rem, 8vw, 7rem);
    line-height: 1.1;
  }

  .text-large {
    font-size: clamp(2rem, 4vw, 3.5rem);
    line-height: 1.2;
  }

  .text-overline {
    font-family: var(--font-body);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: 1rem;
    display: block;
  }

  /* --- NAVIGATION --- */
  nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 2rem var(--spacing-container);
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
    mix-blend-mode: difference;
  }

  .logo {
    font-family: var(--font-heading);
    font-weight: 800;
    font-size: 1.2rem;
    letter-spacing: -0.05em;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    font-size: 0.9rem;
    opacity: 0.7;
    position: relative;
  }

  .nav-links a:hover {
    opacity: 1;
  }

  .nav-links a::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--accent);
    transition: var(--transition-smooth);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* --- HERO SECTION --- */
  .hero {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-bottom: 1px solid var(--border-subtle);
    gap: 2rem;
  }

  .hero-content {
    opacity: 0;
    transform: translateY(30px);
  }

  .hero-roles {
    margin-top: 2rem;
    display: flex;
    gap: 2rem;
    color: var(--text-muted);
    font-size: 1.1rem;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: var(--spacing-container);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    animation: bounce 2s infinite;
  }

  /* --- ABOUT SECTION --- */
  .about-grid {
    grid-column: 1 / -1;
  }

  .about-text {
    grid-column: 4 / 11;
    font-size: 1.5rem;
    font-weight: 300;
  }

  /* --- PROJECTS SECTION --- */
  .project-item {
    border-top: 1px solid var(--border-subtle);
    padding: 4rem 4rem 2rem 4rem;
    transition: all 0.4s ease;
    position: relative;
  }

  .project-item::before,
  .project-item::after {
    content: "";
    position: absolute;
    left: 50%;
    width: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--accent-neon),
      var(--accent-neon-dim)
    );
    transition: width 0.4s ease;
    box-shadow: var(--glow-neon);
    transform: translateX(-50%);
  }

  .project-item::before {
    top: 0;
  }

  .project-item::after {
    bottom: 0;
  }

  .project-item:hover {
    background-color: #0a0a0a;
  }

  .project-item:hover::before,
  .project-item:hover::after {
    width: 50%;
  }

  .project-item:hover .project-title {
    color: var(--accent-neon);
    text-shadow: var(--glow-neon);
  }

  .project-content {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 24px;
    align-items: center;
  }

  .project-image {
    grid-column: 1 / 4;
    aspect-ratio: 16/10;
    overflow: hidden;
    border-radius: 8px;
    border: 1px solid var(--border-subtle);
    transition: all 0.4s ease;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .project-item:hover .project-image {
    border-color: var(--accent-neon);
    box-shadow: var(--glow-neon);
  }

  .project-item:hover .project-image img {
    transform: scale(1.05);
  }

  .project-meta {
    grid-column: 4 / 6;
  }

  .project-year {
    font-family: var(--font-body);
    color: var(--accent-neon);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .project-info {
    grid-column: 6 / 10;
  }

  .project-title {
    transition: all 0.3s ease;
  }

  .project-link {
    grid-column: 10 / 13;
    text-align: right;
    opacity: 0;
    transform: translateX(-20px);
    transition: var(--transition-smooth);
  }

  .project-link a {
    color: var(--accent-neon);
    border: 1px solid var(--accent-neon);
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 0.85rem;
    transition: all 0.3s ease;
  }

  .project-link a:hover {
    background: var(--accent-neon);
    color: var(--bg-color);
    box-shadow: var(--glow-neon);
  }

  .project-item:hover .project-link {
    opacity: 1;
    transform: translateX(0);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
